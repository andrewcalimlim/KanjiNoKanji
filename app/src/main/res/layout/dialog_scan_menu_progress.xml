<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="4dp"
    android:orientation="vertical">

    <!--
android:layout_margin="1dp"
-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/scan_dialog_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2E6"
        tools:context=".ScanMenu">

        <TextView
            android:id="@+id/scan_progress_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pixel_gaming"
            android:text="KanjiNoKanji is scanning your image..."
            android:textColor="@color/black"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@id/scan_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pixel_gaming"
            android:paddingBottom="20dp"
            android:text="Please wait patiently."
            android:textColor="@color/black"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_progress_header" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
